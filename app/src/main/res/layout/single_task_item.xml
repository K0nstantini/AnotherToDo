<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="singleTask"
            type="com.homemade.anothertodo.db.entity.SingleTask" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_file"
            app:layout_constraintStart_toStartOf="parent"
            app:singleTaskImage="@{singleTask}"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/task_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/tree_view_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent"
            app:singleTaskListTaskName="@{singleTask}"
            tools:text="Разметка под турник" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>